@model MembershipMangement.Models.Membership
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "EditMembership";
    Layout = "_Layout";
}

<h1>EditMembership</h1>

<h4>Membership</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMembership">
